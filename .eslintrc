{
    "ecmaFeatures": {
        "modules": true,
        "spread" : true,
        "restParams" : true
    },
    "env" : {
        "browser" : true,
        "node" : true,
        "es6": true 
    },
    "rules" : {
        "no-unused-vars" : 2,
        "no-undef" : 2,
        "require-jsdoc": 0,
        "max-len": ["error", { "code": 90 }]
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    }
}